#!/usr/bin/env bash

POSITIONAL=()
while [[ $# -gt 0 ]]
do
key="$1"

case $key in
    -w|--workdir)
    WORKDIR="$2"
    shift # past argument
    shift # past value
    ;;
    *)    # unknown option
    POSITIONAL+=("$1") # save it in an array for later
    shift # past argument
    ;;
esac
done

docker run --rm --interactive --tty --init --volume "$PWD":/app:cached --workdir /app/$WORKDIR ${POSITIONAL[@]}
